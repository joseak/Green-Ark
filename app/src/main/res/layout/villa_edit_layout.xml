<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/table_row_right_border"
    android:stretchColumns="10">

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/nameEditTextView"
            android:text="Name"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:id="@+id/nameEditText"
            android:background="@drawable/table_row_border_layout"
            android:layout_weight="1.4"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/agentEditTextView"
            android:text="Agent"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/agentEditText"
            android:layout_weight="1.4"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/amountEditTextView"
            android:text="Amount"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/amountEditText"
            android:inputType="number"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/advanceEditTextView"
            android:text="Advance"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/advanceEditText"
            android:inputType="number"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/nopEditTextView"
            android:text="No: of People"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/nopEditText"
            android:inputType="number"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/extraBedEditTextView"
            android:text="Extra bed"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/extraBedEditText"
            android:inputType="number"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dateBookedEditTextView"
            android:text="Date Booked"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/dateBookedEditText"
            android:inputType="date"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dateAdvancePaidEditTextView"
            android:text="Date of Advance Pay"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/dateAdvancePaidEditText"
            android:inputType="date"
            android:layout_weight="1.4"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dateBalancePayEditTextView"
            android:text="Date of Balance pay"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/dateBalancePayEditText"
            android:inputType="date"
            android:layout_weight="1.4"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/planTypEditTextView"
            android:text="Plan Type"
            android:layout_weight="0.6"
            android:background="@drawable/table_row_border_layout"
            android:gravity="center_vertical"
            android:paddingStart="10dp"/>
        <EditText
            android:layout_height="match_parent"
            android:background="@drawable/table_row_border_layout"
            android:id="@+id/planTypeEditText"
            android:layout_weight="1.4">
        </EditText>
    </TableRow>
</TableLayout>